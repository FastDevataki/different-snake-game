<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/controls">


        <ImageView
            android:id="@+id/boardHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="22sp"
            android:textColor="@color/colorBoardLine"
            android:text="LEVEL:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="22sp"
            android:textColor="@color/colorBoardLine"
            android:text="MOVES"/>

        <ImageButton
            android:id="@+id/restart"
            android:layout_alignParentStart="true"
            android:layout_below="@id/upButton"
            android:layout_marginTop="@dimen/buttonMargin"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:background="@drawable/ic_arrow_drop_down_circle_24px" />

        <ImageButton
            android:id="@+id/options"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/upButton"
            android:layout_marginTop="@dimen/buttonMargin"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:background="@drawable/ic_arrow_drop_down_circle_24px" />

        <ImageButton
            android:id="@+id/upButton"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/buttonMargin"
            android:background="@drawable/ic_arrow_drop_down_circle_24px"
            android:onClick="moveUp"
            android:rotation="180" />

        <ImageButton
            android:id="@+id/downButton"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_below="@id/upButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/buttonMargin"
            android:background="@drawable/ic_arrow_drop_down_circle_24px"
            android:onClick="moveDown" />

        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/upButton"
            android:background="@drawable/ic_arrow_drop_down_circle_24px"
            android:onClick="moveLeft"
            android:rotation="90" />

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/upButton"
            android:background="@drawable/ic_arrow_drop_down_circle_24px"
            android:onClick="moveRight"
            android:rotation="270" />

    </RelativeLayout>

</RelativeLayout>